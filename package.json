{
  "name": "trade-demo-frontend",
  "version": "0.1.0",
  "description": "CDP Trade Demo Frontend - Node.js/Hapi.js frontend for trade-demo-backend",
  "sideEffects": false,
  "main": "src/index.js",
  "type": "module",
  "engines": {
    "node": ">=22.16.0"
  },
  "scripts": {
    "build:frontend": "NODE_ENV=production webpack",
    "dev": "run-p frontend:watch server:watch",
    "dev:debug": "run-p frontend:watch server:debug",
    "docker:dev": "npm run server:watch",
    "format": "prettier --write \"src/**/*.js\" \"**/*.{js,cjs,md,json,config.js,test.js}\"",
    "format:check": "prettier --check \"src/**/*.js\" \"**/*.{js,cjs,md,json,config.js,test.js}\"",
    "frontend:watch": "NODE_ENV=development webpack --watch",
    "git:pre-commit-hook": "npm run format:check && npm run lint && npm test",
    "postinstall": "npm run setup:husky",
    "lint": "run-s lint:js lint:scss",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "lint:scss": "stylelint \"src/**/*.scss\" --cache --cache-location .cache/stylelint --cache-strategy content --color --ignore-path .gitignore",
    "pretest": "npm run build:frontend",
    "test": "TZ=UTC vitest run --coverage --exclude='**/*.integration.test.js' && npm run test:integration",
    "test:integration": "docker compose up -d defra-id-stub && DEFRA_ID_OIDC_DISCOVERY_URL=http://localhost:3200/cdp-defra-id-stub/.well-known/openid-configuration DEFRA_ID_CLIENT_ID=test-client DEFRA_ID_CLIENT_SECRET=test-secret DEFRA_ID_SERVICE_ID=test-service TZ=UTC vitest run src/server/common/helpers/oidc-discovery.integration.test.js src/server/auth/auth-flow.integration.test.js src/server/auth/protected-routes.integration.test.js; docker compose down defra-id-stub",
    "test:watch": "TZ=UTC vitest",
    "server:watch": "nodemon --inspect=0.0.0.0 --ext js,json --legacy-watch ./src",
    "server:debug": "nodemon --inspect-brk=0.0.0.0 --ext js,json --legacy-watch ./src",
    "prestart": "npm run build:frontend",
    "start": "NODE_ENV=production node --use-strict .",
    "setup:husky": "node -e \"try { (await import('husky')).default() } catch (e) { if (e.code !== 'ERR_MODULE_NOT_FOUND') throw e }\" --input-type module"
  },
  "author": "Defra DDTS",
  "license": "OGL-UK-3.0",
  "dependencies": {
    "@defra/cdp-auditing": "0.1.0",
    "@defra/hapi-secure-context": "0.1.3",
    "@defra/hapi-tracing": "1.22.0",
    "@elastic/ecs-pino-format": "1.5.0",
    "@hapi/bell": "13.1.0",
    "@hapi/catbox-memory": "6.0.2",
    "@hapi/catbox-redis": "7.0.2",
    "@hapi/cookie": "12.0.1",
    "@hapi/crumb": "9.0.1",
    "@hapi/hapi": "21.4.0",
    "@hapi/inert": "7.1.0",
    "@hapi/jwt": "3.2.1",
    "@hapi/scooter": "7.0.0",
    "@hapi/vision": "7.0.3",
    "@hapi/yar": "11.0.3",
    "aws-embedded-metrics": "4.2.0",
    "blankie": "5.0.0",
    "cssnano": "7.0.7",
    "cssnano-preset-default": "7.0.7",
    "date-fns": "4.1.0",
    "global-agent": "3.0.0",
    "govuk-frontend": "5.11.0",
    "hapi-pino": "12.1.0",
    "hapi-pulse": "3.0.1",
    "ioredis": "5.6.1",
    "lodash": "4.17.21",
    "node-fetch": "3.3.2",
    "nunjucks": "3.2.4",
    "pino": "9.7.0",
    "pino-pretty": "13.0.0",
    "semver": "7.7.2",
    "undici": "7.10.0"
  },
  "devDependencies": {
    "@babel/preset-env": "7.27.2",
    "@vitest/coverage-v8": "3.2.4",
    "autoprefixer": "10.4.21",
    "babel-loader": "10.0.0",
    "cheerio": "1.1.0",
    "clean-webpack-plugin": "4.0.0",
    "convict": "6.2.4",
    "convict-format-with-validator": "6.2.0",
    "copy-webpack-plugin": "13.0.0",
    "eslint": "9.31.0",
    "husky": "9.1.7",
    "neostandard": "0.12.1",
    "nodemon": "3.1.10",
    "npm-run-all": "4.1.5",
    "postcss-load-config": "6.0.1",
    "postcss-loader": "8.1.1",
    "prettier": "3.5.3",
    "sass-embedded": "1.89.2",
    "sass-loader": "16.0.5",
    "source-map-loader": "5.0.0",
    "stylelint": "16.21.0",
    "stylelint-config-gds": "2.0.0",
    "terser-webpack-plugin": "5.3.14",
    "vitest": "3.2.4",
    "vitest-fetch-mock": "0.4.5",
    "webpack": "5.99.9",
    "webpack-assets-manifest": "6.2.1",
    "webpack-cli": "6.0.1"
  }
}
